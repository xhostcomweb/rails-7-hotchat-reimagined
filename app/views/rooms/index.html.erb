
<div id="chatroom_container" class="row bg-custom text-light pt-4 mt-5">
  <div id="side_panel" class="col-md-4 col-sm-4">
    <button type="button" class="btn btn-warning mb-3"><strong>HotChatter</strong> <span class="badge bg-success"><%= current_user.email %></span>
    </button>
    <h4> Users </h4>
    <%= turbo_stream_from "users" %>
    <div id="users">
      <%= render @users %>
    </div>
    <h4 class="pt-3 mb-3"> Rooms </h4>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms" class="mt-3">
      <%= render @rooms%>
      <%= render 'layouts/new_room_form' %>
    </div>
  </div>
  <div id="room_container" class="col-md-8 col-sm-8 bg-custom text-light">
    <button type="button" class="btn btn-info mb-3"><strong>Room</strong> <span class="badge bg-warning">Room Name</span>
    <% if @single_room %>
      <div id="single_room">
        <h4 class="text-center"> <%= @user&.email || @single_room.name %> </h4>
        <%= turbo_stream_from @single_room %>
        <div id="messages">
          <%= render @messages %>
        </div>
        <%= render 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>




